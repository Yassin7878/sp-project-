void selectitem()
{
    int ch, quantity;
    char con, size;

    cout << "Enter the item number that you want to order :  ";
    cin >> ch;

    switch (ch)
    {
    case 1:

        gh();
        break;
    case 2:
        gh();
        break;
    case 3:
        gh();
        break;
    case 4:
        gh();
        break;
    case 5:
        gh();
        break;
    case 6:
        gh();
        break;
    case 7:
        gh();
        break;
    case 8:
        gh();
        break;
    case 9:
        gh();
        break;
    case 10:
        gh();
        break;

    }

}

void gh()
{
    int quantity;
    char size;
    cout << "please enter quantity :  ";
    cin >> quantity;

    cout << "please enter size (s: for small , m: for medium , l: for large ) :  ";
    cin >> size;
    switch (size)
    {
    case 's':
    case 'S':
        c[0] = c[0] + quantity;
        break;
    case 'm':
    case 'M':
        c[0] = c[0] + quantity;
        break;
    case 'l':
    case 'L':
        c[0] = c[0] + quantity;
        break;
    }

}
