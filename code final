    drinkmenu[9].pricelarge = 17.00;
    drinkmenu[9].calories = 240.00;
    drinkmenu[10].drinkmenulist = "Mango Pineapple Smoothie";
    drinkmenu[10].pricesmall = 10.00;
    drinkmenu[10].pricemedium = 13.50;
    drinkmenu[10].pricelarge = 17.00;
